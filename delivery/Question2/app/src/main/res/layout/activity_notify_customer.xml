<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notify_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anthe.question2.notifyCustomer">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/txtvwCustNameNotify"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/notify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNotify"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="95dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_above="@+id/btnNotify"
        android:layout_marginBottom="27dp"
        android:id="@+id/edtTxtNotifyCell"
        android:inputType="number"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Please enter customers cell " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtTxtMessage"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:editable="false"
        android:enabled="true"
        android:layout_below="@+id/txtvwCustNameNotify"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
